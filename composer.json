{
    "name": "hackdawg-ph/hackdawg.com",
    "type": "project",
    "description": "The Hackdawg website",
    "keywords": [
        "php",
        "laravel",
        "website",
        "blog",
        "portfolio"
    ],
    "license": "MIT",
    "require": {
        "php": "^7.4",
        "ext-json": "*",
        "calebporzio/sushi": "^2.0",
        "fideloper/proxy": "^4.2",
        "fruitcake/laravel-cors": "^1.0",
        "guzzlehttp/guzzle": "^6.3",
        "inertiajs/inertia-laravel": "^0.2.5",
        "laravel/framework": "^7.0",
        "laravel/tinker": "^2.0",
        "league/flysystem-aws-s3-v3": "^1.0",
        "livewire/livewire": "^1.0",
        "predis/predis": "^1.1",
        "spatie/laravel-medialibrary": "^8.0.0",
        "spatie/laravel-permission": "^3.11",
        "spatie/laravel-sluggable": "^2.4",
        "tightenco/ziggy": "^0.9.0"
    },
    "require-dev": {
        "barryvdh/laravel-ide-helper": "^2.6",
        "facade/ignition": "^2.0",
        "fzaninotto/faker": "^1.9.1",
        "mockery/mockery": "^1.3.1",
        "nunomaduro/collision": "^5.0",
        "nunomaduro/laravel-mojito": "^0.2.3",
        "nunomaduro/phpinsights": "^1.14",
        "pestphp/pest": "^0.1.5",
        "pestphp/pest-plugin-faker": "^0.1.1",
        "phpunit/phpunit": "^9.0"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        },
        "classmap": [
            "database/seeds",
            "database/factories"
        ],
        "files": [
            "app/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "format": [
            "php-cs-fixer fix ."
        ],
        "test:insights": [
            "@php artisan insights ."
        ],
        "test:unit": [
            "@php artisan test"
        ],
        "test": [
            "composer test:insights",
            "composer test:unit"
        ],
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi"
        ]
    }
}
